<%- include('./includes/header.ejs') %>

<%- include('./includes/navbar.ejs') %>

<div class="container">
  <div class="row ">
    <div class="col-lg-8 offset-2 my-5">
      <h1 class=" text-center my-3">Criar conta ou entrar</h1>
      <p class="text-center lead"> Faça login ou crie sua conta abaixo:</p>
      <%- include('./includes/messages.ejs')%>
      <div class="row">
        <div class="col col-sm-12 col-lg-6">
          <h4>faça seu cadastro</h4>
          <p>Se você ainda não tem conta preencha o formulário abaixo</p>
          <form action="/login/register" class="form-cadastro" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label >Seu Email</label>
              <input type="email" class="form-control" name="email" >
            </div>
            <div class="form-group">
              <label >Sua Senha</label>
              <input type="password" class="form-control" name="senha" >
            </div>
            <button type="submit" class="btn btn-primary"> Enviar </button>
          </form>


        </div>
        <div class="col-sm-12 col-lg-6 my-sm-5 my-lg-0"> 
           <h4>faça o login </h4>
          <p>Se você já tem uma conta faça login abaixo</p>
          <form action="/login/login" class="form-login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group " >
              <label >Seu Email</label>
              <input type="email" class="form-control" name="email" >   
            </div>
            <div class="form-group">
              <label >Sua Senha</label>
              <input type="password" class="form-control" name="senha" >
            </div>
            <button type="submit" class="btn btn-primary"> Enviar </button>
          </form></div>
      </div>
    
    </div>
</div>

   
  <%- include('./includes/footer.ejs') %>